{
    "name": "BBC radio",
    "version": "2.0",
    "manifest_version": 2,

    "description": "BBC radio just a few clicks away.",
    "homepage_url": "https://addons.opera.com/extensions/details/bbc-radio-online-player/",
    "icons": { 
        "16": "img/icons/icon_16.png",
        "48": "img/icons/icon_48.png",
        "128": "img/icons/icon_128.png" 
    },

    "developer": { 
        "name": "Dmitry Gorelik",
        "url": "https://github.com/dhorelik" 
    },

    "browser_action": {
        "default_icon": "img/icons/icon.png",
        "default_title": "BBC Radio",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage"
    ],

    "options_page": "options.html",
    "background": {
        "scripts": ["js/background.js"]
    }
}